{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ESNext",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "pretty": true,
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "lib": ["es2018", "dom"]
  },
  "exclude": [
    "node_modules",
    "public",
    ".cache",
    "lib",
    "tests",
    "*.test.ts",
    "*.test.tsx"
  ]
}
